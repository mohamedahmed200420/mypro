@model TbVoteResult

<div class="row">

    <form asp-controller="Home" asp-action="Save" method="post" enctype="multipart/form-data" role="form" class="forms-sample">

        <div class="col-md-6 grid-margin stretch-card">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">  </h4>


                    <div class="form-group">
                        <label for="exampleInputUsername1">Username</label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Username">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Age</label>
                        <input asp-for="Age" type="number" class="form-control" id="exampleInputEmail1" placeholder="Age">
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Notes</label>
                        <input asp-for="Notes" type="text" class="form-control" id="exampleInputPassword1" placeholder="Notes">
                    </div>







                </div>
            </div>
            <div class="card">
                <div class="card-body">

                
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">jobe</label>
                        <select asp-for="JobId" asp-items="@(new SelectList( ViewBag.jobs,"JobId","JobName"))" class="form-control form-control-lg" id="exampleFormControlSelect1">
                        </select>
                        <span asp-validation-for="JobId" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="IdOfDataBase" />
               @*     <input type="hidden" asp-for="VoteResultId" />*@

                    <div class="form-group">
                        <label for="exampleFormControlSelect2">year of exeperince</label>
                    <select asp-for="YearOfExperienceId" asp-items="@(new SelectList(ViewBag.yearOfExeperince, "YearOfExperinceId", "Year"))" class="form-control form-control-lg" id="exampleFormControlSelect2">
                        </select>
                        <span asp-validation-for="YearOfExperienceId" class="text-danger"></span>
                    </div>


                             <div class="form-group">
                    <label for="exampleFormControlSelect3">vote option</label>
                        <select asp-for="VotesOptionId" asp-items=@(new SelectList(ViewBag.option,"VoteOptionId","Options")) class="form-control form-control-sm" id="exampleFormControlSelect3">
                            
                    </select>
                        <span asp-validation-for="VotesOptionId" class="text-danger"></span>
                    </div>

                </div>
            </div>

        </div>


        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <button class="btn btn-light">Cancel</button>


    </form>
</div>
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}